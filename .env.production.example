# =============================================================================
# OmniChannel SaaS Platform - Production Environment Configuration
# IMPORTANT: Copy this to .env and fill in your actual values!
# =============================================================================

# Environment
NODE_ENV=production

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=omnichannel
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
POSTGRES_DB=omnichannel
DATABASE_HOST=postgres
DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Application URLs (Update with your domain)
# -----------------------------------------------------------------------------
API_PORT=3001
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com
CORS_ORIGIN=https://app.yourdomain.com

# -----------------------------------------------------------------------------
# Security - GENERATE NEW VALUES FOR PRODUCTION!
# Use: openssl rand -hex 32
# -----------------------------------------------------------------------------
JWT_SECRET=GENERATE_64_CHAR_RANDOM_STRING_HERE_1234567890abcdef1234567890abcdef
JWT_EXPIRES_IN=7d
SESSION_SECRET=GENERATE_ANOTHER_64_CHAR_STRING_HERE_abcdef1234567890abcdef123456

# -----------------------------------------------------------------------------
# Meta / WhatsApp Configuration
# Get from: https://developers.facebook.com/apps/
# -----------------------------------------------------------------------------
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_VERIFY_TOKEN=your-webhook-verify-token-random-string
META_EMBEDDED_SIGNUP_CONFIG_ID=your-embedded-signup-config-id
META_GRAPH_API_VERSION=v18.0
META_GRAPH_API_BASE_URL=https://graph.facebook.com

# -----------------------------------------------------------------------------
# Email Service Configuration (Choose one provider)
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=sendgrid

# SendGrid (Recommended)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=OmniChannel Platform

# AWS SES (Alternative)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# SES_FROM_EMAIL=noreply@yourdomain.com

# SMTP (Alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# -----------------------------------------------------------------------------
# Stripe Billing (Use LIVE keys for production!)
# Get from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -----------------------------------------------------------------------------
# Monitoring & Logging
# Get Sentry DSN from: https://sentry.io/
# -----------------------------------------------------------------------------
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_WHATSAPP=true
ENABLE_INSTAGRAM=true
ENABLE_EMAIL=true
ENABLE_AUTOMATION=true
ENABLE_CAMPAIGNS=true
ENABLE_ECOMMERCE=true
ENABLE_BILLING=true

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=/app/uploads
